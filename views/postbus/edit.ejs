<% include ../partials/header  %>


<div class="container" >
        <h3  id="reg">  Edit </h3>
    <div class="row">
           <div class="col-md-6 col-sm-4">
                <form  action="/postBus/<%= post.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
					<label> Title </label>
                    <input type="text"   class="form-control" required name="post[title]" value="<%= post.title %>">
					</div>
					<div class="form-group">
					<label> Choose file </label>
					<input type="file"   class="form-control" required name="image" accept="images/*">
					</div>
					<p class="help-block">Pls upload an image here.</p>
                    <div class="form-group">
					<label for="">Description </label>	
                    <textarea  class="form-control" name="post[desc]" required cols="20" rows="20"><%= post.desc %></textarea>
                    </div>
                    <!-- <p class="help-block">Example block-level help text here.</p> -->
                    <input type="submit" value="Edit Business Post" class="btn btn-primary">
                </form>
           </div> 
    </div>
</div>

<div class="container" id="reg">
</div>


