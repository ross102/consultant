<% include ../partials/header  %>


<div class="container" >
        <h3  id="reg"> Post A Business Idea</h3>
    <div class="row">
           <div class="col-md-6 col-sm-4">
                <form action="/postBus" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
					<label> Title </label>
                    <input type="text"   class="form-control" required name="post[title]" placeholder="Title of post">
					</div>
					<div class="form-group">
					<label> Choose file </label>
					<input type="file"   class="form-control" required name="image" accept="images/*">
					</div>
					<p class="help-block">Pls upload an image here.</p>
                    <div class="form-group">
					<label for="">Description </label>	
                    <textarea  class="form-control"  name="post[desc]" cols="20" rows="20" required></textarea>
                    
                    </div>
                    <!-- <p class="help-block">Example block-level help text here.</p> -->
                    <input type="submit" value="Business Idea" class="btn btn-primary">
                </form>
           </div> 
    </div>
</div>


<div class="container" id="reg">
	</div>


