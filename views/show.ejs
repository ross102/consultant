<% include ./partials/header  %>

<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-4">
            <div>
             <img src="<%= post.image.secure_url %>" class="img-responsive" alt="">
            </div>
            <span><i class="fa fa-calendar"></i> <%=  post.created.toDateString()  %></span>
            <div class="courses-detail">
                <h3><a href="#"><%=  post.title      %></a></h3>
                <p><%=  post.desc      %></p>
               </div> 
               <div class="courses-info">
                  <div class="courses-author">
                     <span>posted by <%=  post.author.username   %></span><br /><br />
                 </div>
                 <div style="float: right; ">
                    <a class="btn btn-primary" href="/post/<%= post.id %>/comments"> Leave a comment</a><br /><br />
                 </div>
                 <% if( currentUser && post.author.equals(currentUser._id) || currentUser && currentUser.isAdmin === true)  { %> 
                 <div>
                    <button class="form control" class="btn btn-primary"><a href="/post/<%= post.id %>/edit"> Edit your article</a></button><br /><br />
                 </div>
                  <div style="float: right">
                   <form action="/post/<%= post.id %>?_method=DELETE" method="POST">
                     <button class="btn btn-danger" >Delete your Article</button>
                   </form>  <br />
                  </div>
                    <%  }  %>
        </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-sm-6">
              <% post.comments.forEach(function(comment) { %>
              <div class="well well-sm">
                      <div><b> <%= comment.author.username %></b> </div>
                      <div> <%= comment.text    %> </div> <br />
                      <div class="courses-author">
                        <img src="<%= comment.author.image.secure_url %>">
                      </div>
              </div>
              <% }) %>
      </div>
      </div>
</div>


<div class="container" id="reg">
  </div>

  