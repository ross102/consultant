<% include ./partials/header  %>


<div class="container" >
        <h3  id="reg"> Type Your Article</h3>
    <div class="row">
           <div class="col-md-6 col-sm-4">
                <form action="/post" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
					<label> Title </label>
                    <input type="text"   class="form-control" name="post[title]" placeholder="Title of post">
					</div>
					<div class="form-group">
					<label> Choose file </label>
					<input type="file"   class="form-control" name="image" accept="images/*">
					</div>
					<p class="help-block">Pls upload an image here.</p>
                    <div class="form-group">
					<label for="">Description </label>	
                    <textarea  class="form-control" name="post[desc]" cols="20" rows="20"></textarea>
                    </div>
                    <!-- <p class="help-block">Example block-level help text here.</p> -->
                    <input type="submit" value="Post an Article" class="btn btn-primary">
                </form>
           </div> 
    </div>
</div>

<div class="container" id="reg">
</div>
	


